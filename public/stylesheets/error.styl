@import 'nib'

//************************
//******** LAYOUT ********
//************************

div#commonErrorBlanket
    background-color:#111
    opacity: 0.5
    position:fixed
    top:0px
    left:0px
    width:100%
    height: 100%
    z-index: 9999

#commonErrorDialog
    position: fixed
    left: 35%
    top: 20%
    margin-left: auto
    margin-right: auto
    width: 300px
    border: 1px solid black
    background-color: white
    padding: 10px 15px 10px 15px
    border-radius(10px)
    box-shadow 0px 2px 8px rgba(0,0,0,1)
    z-index: 10000

#commonErrorTitle
    text-align: center
    color: rgb(255, 127, 0)
    font-size: 24px

#commonErrorMsg
    width: 90%
    margin-left: auto
    margin-right: auto
    text-align: center

#commonErrorButtons
  text-align: center
  margin-top: 20px
  margin-bottom: 20px


